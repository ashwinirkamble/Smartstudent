<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/textView"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="84dp"
        android:text="@string/login_by"
        android:visibility="visible" />


    <Spinner
        android:id="@+id/sp2"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView" />

    <TextView
        android:id="@+id/mobile_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/sp2"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="18dp"
        android:visibility="invisible"
        tools:text="@string/mobile_number" />

    <EditText
        android:id="@+id/mobile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/mobile_no"
        android:ems="10"
        android:hint="@string/enter_mobile"
        android:inputType="number"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/email"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/mobile_no"
        android:text="@string/email"
        android:visibility="invisible" />

    <EditText
        android:id="@+id/et_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/mobile_no"
        android:layout_alignStart="@+id/mobile_no"
        android:layout_below="@+id/email"
        android:ems="10"
        android:hint="@string/enter_email"
        android:inputType="textEmailAddress"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/adhar_no"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/sp2"
        android:text="@string/adhar"
        android:visibility="invisible" />

    <EditText
        android:id="@+id/et_adhar_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/mobile_no"
        android:ems="10"
        android:hint="@string/Adhar_Number"
        android:inputType="number"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/tv_passport_no"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/et_passport_no"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="@string/passport"
        android:visibility="invisible" />

    <EditText
        android:id="@+id/et_passport_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/email"
        android:layout_alignBottom="@+id/email"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:ems="10"
        android:hint="@string/enter_passport"
        android:inputType="number|numberDecimal"
        android:visibility="invisible" />

    <EditText
        android:id="@+id/password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tv_password"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="@string/enter_password"
        android:inputType="textPassword" />

    <TextView
        android:id="@+id/tv_password"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:text="@string/password" />

    <Button
        android:id="@+id/bt_login"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/password"
        android:layout_marginTop="22dp"
        android:layout_toLeftOf="@+id/tv_forget_pass"
        android:layout_toStartOf="@+id/tv_forget_pass"
        android:text="@string/login" />

    <Button
        android:id="@+id/bt_cancel"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/bt_login"
        android:layout_marginLeft="37dp"
        android:layout_marginStart="37dp"
        android:layout_toEndOf="@+id/bt_login"
        android:layout_toRightOf="@+id/bt_login"
        android:text="@string/cancel" />

    <TextView
        android:id="@+id/tv_dont_remember_pass"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/et_email"
        android:layout_alignRight="@+id/et_email"
        android:layout_below="@+id/bt_login"
        android:layout_marginTop="19dp"
        android:text="@string/dont_rem_pass" />

    <TextView
        android:id="@+id/tv_dont_have_acc"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tv_dont_remember_pass"
        android:layout_marginTop="17dp"
        android:text="@string/dont_have_acc" />

    <TextView
        android:id="@+id/tv_forget_pass"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_dont_remember_pass"
        android:layout_alignBottom="@+id/tv_dont_remember_pass"
        android:layout_alignLeft="@+id/tv_create_acc"
        android:layout_alignStart="@+id/tv_create_acc"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:text="@string/forget_pass" />

    <TextView
        android:id="@+id/tv_create_acc"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_dont_have_acc"
        android:layout_alignBottom="@+id/tv_dont_have_acc"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@+id/tv_dont_have_acc"
        android:layout_toRightOf="@+id/tv_dont_have_acc"
        android:text="@string/create_acc" />

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:title="@string/login" />


</RelativeLayout>
